# ================================================
# DEVELOPMENT ENVIRONMENT WITH DOCKER
# ================================================

# Application Configuration
APP_NAME=ecommerce-async-resilient-system
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Database Configuration (Docker Services)
DATABASE_HOST=postgres-dev
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=ecommerce_async
DATABASE_SSL=false
RUN_MIGRATIONS=true

# Redis Configuration (Docker Services)
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ecommerce:

# JWT Configuration (Development only - NOT FOR PRODUCTION)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=ecommerce-async-system-dev
JWT_AUDIENCE=ecommerce-users-dev

JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

JWT_VERIFICATION_SECRET=dev-verification-secret-key-change-in-production
JWT_VERIFICATION_EXPIRES_IN=24h

JWT_RESET_PASSWORD_SECRET=dev-reset-password-secret-key-change-in-production
JWT_RESET_PASSWORD_EXPIRES_IN=1h

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_COLORIZE=true
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_ZIPPED_ARCHIVE=true
LOG_ERROR_FILE_LEVEL=warn

# Request Configuration
REQUEST_TIMEOUT=30000

# Queue Configuration
QUEUE_PREFIX=ecommerce_dev
BULL_REMOVE_ON_COMPLETE=10
BULL_REMOVE_ON_FAIL=10
BULL_ATTEMPTS=3

# Development Features
ENABLE_SWAGGER=true
SWAGGER_PATH=api/docs
HELMET_ENABLED=false

# Development Tools
DEBUG_NAMESPACE=ecommerce:*
WATCH_MODE=true

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000