# Test Environment Configuration
NODE_ENV=e2e

# Database Configuration for Testing (aligned with database.config.ts)
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=ecommerce_async_test
DATABASE_URL=postgresql://postgres:password@localhost:5433/ecommerce_async_test

# Redis Configuration for Testing (aligned with docker-compose.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/1

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# Application Configuration for Testing
APP_PORT=3001
APP_NAME=Ecommerce Async Resilient System (Test)
APP_VERSION=1.0.0

# Disable external services in tests
DISABLE_AUTH=true
DISABLE_NOTIFICATIONS=true
DISABLE_EXTERNAL_APIS=true

# Test Database URLs (alternative - for CI/CD environments)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5433/ecommerce_async_test
TEST_REDIS_URL=redis://localhost:6379/1

# Logging Configuration for Tests
LOG_LEVEL=error
LOG_FORMAT=simple
DISABLE_LOGS=true

# âœ… Epic 1.6 - Inventory Service (HTTP Client Configuration for Tests)
# Note: Tests will mock this service, but configuration is needed for E2E tests
INVENTORY_SERVICE_URL=http://localhost:8080
INVENTORY_SERVICE_TIMEOUT=3000
INVENTORY_SERVICE_RETRY_ATTEMPTS=1
INVENTORY_SERVICE_RETRY_DELAY=100